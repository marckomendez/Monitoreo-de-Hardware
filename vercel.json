{
  "version": 2,
  "name": "monitoreo-hardware-frontend",
  "builds": [
    {
      "src": "views/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.svg",
      "use": "@vercel/static"
    },
    {
      "src": "*.png",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/views/index.html"
    },
    {
      "src": "/login",
      "dest": "/views/login.html"
    },
    {
      "src": "/alertas",
      "dest": "/views/alertas.html"
    },
    {
      "src": "/bitacora",
      "dest": "/views/bitacora.html"
    },
    {
      "src": "/reportes",
      "dest": "/views/reportes.html"
    },
    {
      "src": "/umbrales",
      "dest": "/views/umbrales.html"
    },
    {
      "src": "/usuarios",
      "dest": "/views/usuarios.html"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(svg|png|ico))",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}